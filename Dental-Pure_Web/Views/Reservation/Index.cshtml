@model Dental_Pure.Entities.ReservationVM
@{
    ViewData["Title"] = "Booking";
}



<form method="post" asp-action="Index" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Reservation.Name"></label>
            <input asp-for="Reservation.Name" class="form-control">
            <span asp-validation-for="Reservation.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Reservation.Email"></label>
            <input asp-for="Reservation.Email" class="form-control">
            <span asp-validation-for="Reservation.Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Reservation.PhoneNumber"></label>
            <input asp-for="Reservation.PhoneNumber" class="form-control">
            <span asp-validation-for="Reservation.PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Reservation.AssignedDoctorId">Choose one of our doctors</label>
            <select asp-for="Reservation.AssignedDoctorId" asp-items="@Model.StaffList" class="form-select">
                <option disabled selected>Choose...</option>

            </select>
            <span asp-validation-for="Reservation.AssignedDoctorId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputState">Choose date</label> <br />
            <input asp-for="Reservation.ReservationDate" type="datetime-local" step="1800"  >
            <span asp-validation-for="Reservation.ReservationDate" class="text-danger"></span>
        </div>
    </div>
    <button type="submit"  class="btn btn-primary">Submit</button>


</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}







