@using Dental_Pure.Entities;
@model ReservationModel
@{
    ViewData["Title"] = "Index";
}



<form>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Name</label>
            <input type="Name" class="form-control" id="inputEmail4">
        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email" class="form-control" id="inputEmail4">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPhone">Phone Number</label>
            <input type="text"  class="form-control" id="inputAddress" placeholder="">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputState">Choose one of our doctors</label>
            <select id="inputState" class="form-control">
                <option selected>Choose...</option>
                <option>...</option>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputState">Choose date</label> <br />
            <input type="datetime-local" @*class="form-control"*@ id="inputDate" step="1800" min="" max="">
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
                Remind me
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>


</form>








