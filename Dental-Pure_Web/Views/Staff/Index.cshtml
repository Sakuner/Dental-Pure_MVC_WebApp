@using Dental_Pure.Entities;
@model List<StaffModel>
@{
    ViewData["Title"] = "Index";
}



<div class="row pb-3 ">
    @foreach (var person in Model)
    {
        <div class="col-4">
            <div class="row p-2 h-100">
                <div class="card">
                    <img src="@person.PhotoUrl" class="card-img-top rounded" style="width:fit-content ; height:450px" />
                    <div class="card-body">
                        <div class="pl-1">
                            <p class="card-title h3 text-primary"><b>@person.Name</b></p>
                            <p class="card-title h4 text-info">@person.Title</p>
                        </div>
                        <div class="pl-1">
                            <p class="card-title h5 text-info">@person.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>